@model WorkChat2.ViewModels.AdminUsersPageVm

@{
    ViewData["Title"] = "Users";
}

<h1>Users</h1>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}

<form method="get" class="mb-3">
    <div class="row g-2 align-items-end">
        <div class="col-md-6">
            <label class="form-label">Search</label>
            <input name="q" value="@Model.Q" class="form-control" placeholder="email, username, name..." />
        </div>

        <div class="col-md-2">
            <label class="form-label">Page Size</label>
            <select name="pageSize" class="form-select">
                <option value="10" selected="@(Model.PageSize == 10)">10</option>
                <option value="25" selected="@(Model.PageSize == 25)">25</option>
                <option value="50" selected="@(Model.PageSize == 50)">50</option>
                <option value="100" selected="@(Model.PageSize == 100)">100</option>
            </select>
        </div>

        <div class="col-md-4">
            <button class="btn btn-primary" type="submit">Apply</button>
            <a class="btn btn-secondary" asp-action="Users">Clear</a>
        </div>
    </div>
</form>

<p class="text-muted">
    Total: @Model.TotalCount • Page @Model.Page of @Model.TotalPages
</p>

<table class="table table-striped table-hover align-middle">
    <thead>
        <tr>
            <th>Email</th>
            <th>UserName</th>
            <th>Name</th>
            <th>LastName</th>
            <th>Roles</th>
            <th>Created</th>
            <th>Updated</th>
            <th style="width: 330px;">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var u in Model.Users)
        {
            <tr>
                <td>@u.Email</td>
                <td>@u.UserName</td>
                <td>@u.Name @u.LastName</td>
                <td>
                    @if (u.Roles.Count == 0)
                    {
                        <span class="badge bg-secondary">User</span>
                    }
                    else
                    {
                        foreach (var r in u.Roles)
                        {
                            <span class="badge @(r=="Admin" ? "bg-success" : "bg-secondary") me-1">@r</span>
                        }
                    }
                </td>
                <td>@u.CreatedAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@u.UpdatedAt.ToString("yyyy-MM-dd HH:mm")</td>

                <td>
                    <form asp-action="ToggleAdmin" method="post" class="d-inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@u.Id" />
                        <input type="hidden" name="q" value="@Model.Q" />
                        <input type="hidden" name="page" value="@Model.Page" />
                        <input type="hidden" name="pageSize" value="@Model.PageSize" />
                        <button type="submit" class="btn btn-sm btn-warning">
                            @(u.IsAdmin ? "Demote Admin" : "Promote Admin")
                        </button>
                    </form>

                    <a class="btn btn-sm btn-outline-primary"
                        asp-action="ResetPassword"
                        asp-route-id="@u.Id"
                        asp-route-q="@Model.Q"
                        asp-route-page="@Model.Page"
                        asp-route-pageSize="@Model.PageSize">
                        Reset Password
                    </a>

                    <form asp-action="DeleteUser" method="post" class="d-inline"
                    onsubmit="return confirm('Delete this user? Cannot be undone.');">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@u.Id" />
                        <input type="hidden" name="q" value="@Model.Q" />
                        <input type="hidden" name="page" value="@Model.Page" />
                        <input type="hidden" name="pageSize" value="@Model.PageSize" />
                        <button type="submit" class="btn btn-sm btn-danger">
                            Delete
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<nav class="mt-3">
    <ul class="pagination">
        <li class="page-item @(Model.HasPrev ? "" : "disabled")">
            <a class="page-link"
                asp-action="Users"
                asp-route-q="@Model.Q"
                asp-route-page="@(Model.Page - 1)"
                asp-route-pageSize="@Model.PageSize">Prev</a>
        </li>

        <li class="page-item disabled">
            <span class="page-link">Page @Model.Page / @Model.TotalPages</span>
        </li>

        <li class="page-item @(Model.HasNext ? "" : "disabled")">
            <a class="page-link"
               asp-action="Users"
               asp-route-q="@Model.Q"
               asp-route-page="@(Model.Page + 1)"
               asp-route-pageSize="@Model.PageSize">Next</a>
        </li>
    </ul>
</nav>

<p>
    <a asp-controller="Admin" asp-action="Index" class="btn btn-secondary">Back</a>
    <a asp-controller="Admin" asp-action="CreateUser" class="btn btn-primary">Create User</a>
</p>
