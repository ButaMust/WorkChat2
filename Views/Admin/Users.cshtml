@model WorkChat2.ViewModels.AdminUserListItemVm

@{
	ViewData["Title"] = "Users";
}

<h1>Users</h1>

@if (TempData["Error"] != null)
{
	<div class="alert alert-danger">@TempData["Error"]</div>
}
@if (TempData["Success"] != null)
{
	<div class="alert alert-success">@TempData["Success"]</div>
}

<form method="get" class="mb-3">
	<div class="row g-2 align-items-end">
		<div class="col-mb-6">
			<label class="form-label">Search</label>
			<input name="q" value="@Model.Q" class="form-control" placeholder="email, username, name..."/>
		</div>

		<div class="col-mb-2">
			<label class="form-label">Page Size</label>
			<select name="pageSize" class="form-select">
				<option value="10" selected="@(Model.PageSize==10)">10</option>
				<option value="10" selected="@(Model.PageSize==25)">25</option>
				<option value="10" selected="@(Model.PageSize==50)">50</option>
				<option value="10" selected="@(Model.PageSize==100)">100</option>
			</select>
		</div>

		<div class="col-mb-4">
			<button class="btn btn-primary" type="submit">Apply</button>
			<a class="btn btn-secondary" asp-action="Users">Clear</a>
		</div>
	</div>
</form>