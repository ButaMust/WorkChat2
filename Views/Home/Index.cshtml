@{
    ViewData["Title"] = "Home Page";
}

@model List<WorkChat2.Models.Announcement>

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    @if (Model.Any())
    {
        <div class="mb-4">
            <h3>Announcements</h3>

            @foreach (var a in Model)
            {
                <div class="card mb-2">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <h5 class="card-title mb-1">
                                @a.Title
                                @if (a.IsPinned)
                                {
                                    <span class="badge bg-warning text-dark ms-2">Pinned</span>
                                }
                            </h5>
                            <small class="text-muted">@a.CreatedAt.ToLocalTime().ToString("dd MMM yyyy HH:mm")</small>
                        </div>

                        <p class="card-text mb-0">@a.Body</p>
                    </div>
                </div>
            }
        </div>
    }
</div>
